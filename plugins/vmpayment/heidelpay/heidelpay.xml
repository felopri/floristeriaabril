<extension type="plugin" version="2.5" group="vmpayment"
           method="upgrade">
    <name>VMPAYMENT_HEIDELPAY</name>
    <creationDate>12-Sep-2012</creationDate>
    <author>Heidelberger Payment GmbH</author>
    <authorEmail>info@heidelpay.de</authorEmail>
