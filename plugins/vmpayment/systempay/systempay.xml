	<param name="redirect_error_timeout" type="text" size="10" default="5" label="VMPAYMENT_SYSTEMPAY_REDIRECT_ERROR_TIMEOUT" description="VMPAYMENT_SYSTEMPAY_REDIRECT_ERROR_TIMEOUT_DESC"/>
