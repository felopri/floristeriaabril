	<param type="spacer" default="" level="level1" />
	
	<param type="systempaylabel" label="VMPAYMENT_SYSTEMPAY_PAYMENT_GATEWAY_ACCESS" level="level1" />

	<param name="site_id" type="text" size="10" default="" label="VMPAYMENT_SYSTEMPAY_SITE_ID" description="VMPAYMENT_SYSTEMPAY_SITE_ID_DESC"/>
	<param name="key_test" type="text" size="20" default="" label="VMPAYMENT_SYSTEMPAY_TEST_KEY" description="VMPAYMENT_SYSTEMPAY_TEST_KEY_DESC"/>
	<param name="key_prod" type="text" size="20" default="" label="VMPAYMENT_SYSTEMPAY_PROD_KEY" description="VMPAYMENT_SYSTEMPAY_PROD_KEY_DESC"/>
	<param name="ctx_mode" type="radio" default="TEST" label="VMPAYMENT_SYSTEMPAY_CTX_MODE" description="VMPAYMENT_SYSTEMPAY_CTX_MODE_DESC">
	    <option value="TEST">VMPAYMENT_SYSTEMPAY_TEST</option>
	    <option value="PRODUCTION">VMPAYMENT_SYSTEMPAY_PRODUCTION</option>
	</param>
	<param name="platform_url" type="text" size="50" default="https://paiement.systempay.fr/vads-payment/" label="VMPAYMENT_SYSTEMPAY_PLATFORM_URL" description="VMPAYMENT_SYSTEMPAY_PLATFORM_URL_DESC"/>

